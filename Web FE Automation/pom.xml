            <dependency>
                <groupId>com.test.core.framework.ustglobal</groupId>
                <artifactId>java_support_framework</artifactId>
                <version>${core.framework.version}</version>
                <scope>system</scope>
                <systemPath>${main.basedir}/core/java_support_framework-${core.framework.version}.jar</systemPath>
                <exclusions>
                    <exclusion>
